<form action="/next" method="POST">
  <% @size.times do |i| %>
    <input type="hidden" name="<%= [i] %>" value="<%= params["#{i}"] %>">
  <% end %>
    <p>
      <label for="POST-question<%= @size %>"><center><%= @questions[@size] %></center>
      <br><br>
      <% options = [
      "<input type='radio' id='ashley' name='#{@size}' value='-1'>&nbsp;#{@options[@size][0]}</input><br>",
      "<input type='radio' id='blake' name='#{@size}' value='1'>&nbsp;#{@options[@size][1]}</input><br>",
      "<input type='radio' id='neither' name='#{@size}' value='0'>&nbsp;#{@options[@size][2]}</input><br>"
      ].shuffle
      %>
      <% options.each do |option| %>
        <%= option %>
      <% end %>
      </label>
    </p>
  <div class="button">
    <button type="submit" value="submit">Score me!</button>
  </div>
</form>